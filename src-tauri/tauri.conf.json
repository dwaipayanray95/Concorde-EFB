{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CONCORDE EFB",
  "version": "0.9.0",
  "identifier": "com.dwaipayanray.concordeefb",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { "title": "CONCORDE EFB - v1.0.0 by @theawesomeray", "width": 1280, "height": 800, "resizable": true, "devtools": true }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ]
  }
}