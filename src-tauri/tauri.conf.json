{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Concorde EFB",
  "version": "2.0.1",
  "identifier": "com.dwaipayanray.concordeefb",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Concorde EFB - v1.1 by @theawesomeray",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}